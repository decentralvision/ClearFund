<%= form_for([@user, @proposal]) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :funding_goal %>
  <%= f.number_field :funding_goal %>

	<%= f.label :expiration_date %>
	<%= f.date_field :expiration%>

	<%= f.hidden_field :user_id, :value => @user.id %>

  <%= f.submit "Submit" %>

<% end %>