<div class="info-box">
<%= form_for @user, :html => {:class => 'userform' }, controller: 'users', action: 'create' do |f| %>

    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <%= f.label :name %>
  <div class="field<%= ' field_with_errors' if @user.errors[:name].any? %>">
  
  <%= f.text_field :name %>
  </div>
  <%= f.label :password %>
  <div class="field<%= ' field_with_errors' if @user.errors[:password].any? %>">
    <%= f.password_field :password %>
  </div>
  <%= f.label :confirm_password %>
  <div class="field<%= ' field_with_errors' if @user.errors[:password].any? %>">
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "Sign Up" %>
  <div></div>
  <%= link_to image_tag("btn_google_signin_dark_pressed_web.png"), '/auth/google_oauth2' %>
<% end %>
</div>